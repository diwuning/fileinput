<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/text_white1"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/nav_head_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        />


    <RelativeLayout
        android:layout_marginLeft="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/nav_head_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_bgcolor"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/nav_head_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/icon_back"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/nav_head_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_bgcolor"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/nav_head_right"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/search_icon_66"
            />

    </RelativeLayout>



</RelativeLayout>